function room_AfterFadeIn()
{
  //AgsSQLite* db = AgsSQLite.Open("C:\\Users\\erico\\git\\agssqlite\\agssqlite_demo\\Compiled\\Windows\\test.db");
  AgsSQLite* db = AgsSQLite.Open("test.db");
  
  String sql;
  
  sql.Append("CREATE TABLE COMPANY(");
  sql.Append( "ID INT PRIMARY KEY     NOT NULL,");
  sql.Append("NAME           TEXT    NOT NULL,");
  sql.Append("AGE            INT     NOT NULL,");
  sql.Append("ADDRESS        CHAR(50),");
  sql.Append("SALARY         REAL );");
  
  SQLiteQueryStatus rc = db.ExecuteQuery(sql);
  
  if(rc==eSQLITE_OK){
    Display("%s",db.GetQueryStatusText());  
  } else {
    Display("%s",db.GetQueryStatusText());    
  }
  
  db.Close();
}
